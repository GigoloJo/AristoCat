<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/background"
    >

    <ImageView
        android:id="@+id/aristeia_logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/aristeia_logo"
        />

    <ImageView
        android:id="@+id/filler_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@color/background"
        />

    <ImageButton
        android:id="@+id/button_characters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/background"
        android:onClick="goto_characters"
        android:src="@drawable/aristeia_logo"
        />

    <ImageButton
        android:id="@+id/button_scenarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/background"
        android:src="@drawable/aristeia_logo"
        />

    <ImageButton
        android:id="@+id/button_states"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/background"
        android:src="@drawable/aristeia_logo"
        />

    <ImageButton
        android:id="@+id/button_round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/background"
        android:src="@drawable/aristeia_logo"
        />

    <ImageView
        android:id="@+id/filler_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@color/background"
        />

</LinearLayout>