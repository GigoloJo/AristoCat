<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backrepeat">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/parvati_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/parvati_background" />

        <ImageView
            android:id="@+id/parvati_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/parvati_logo" />

        <TextView
            android:id="@+id/parvati_motd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/parvati_logo"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="0dp"
            android:shadowColor="@color/black_shadow"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1.5"
            android:singleLine="false"
            android:text="@string/parvati_moto"
            android:textAlignment="center"
            android:textColor="@color/white_font"
            android:textSize="12dp"
            android:alpha="0.95"
            app:fontFamily="@font/montalban_bold_italic" />

        <TextView
            android:id="@+id/parvati_abstract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/parvati_motd"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="0dp"
            android:text="@string/parvati_abstract"
            android:textColor="@color/white_font"
            android:textSize="10dp"
            android:textAppearance="@android:style/TextAppearance.Holo.Small" />

        <TextView
            android:id="@+id/parvati_hl_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/parvati_abstract"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:shadowColor="@color/black_shadow"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1.5"
            android:singleLine="false"
            android:text="BACKGROUND"
            android:textColor="@color/white_font"
            android:textSize="14dp"
            android:alpha="0.95"
            app:fontFamily="@font/montalban_bold_italic" />

        <TextView
            android:id="@+id/parvati_hl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/parvati_hl_background"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="0dp"
            android:shadowColor="@color/black_shadow"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1.5"
            android:singleLine="false"
            android:text="@string/parvati_name"
            android:textStyle="bold"
            android:textColor="@color/white_font"
            android:textSize="14dp"
            android:textAppearance="@android:style/TextAppearance.Holo.Small" />

        <TextView
            android:id="@+id/parvati_hl_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/parvati_hl_name"
            android:layout_toRightOf="@+id/parvati_hl_name"
            android:layout_below="@+id/parvati_hl_background"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="0dp"
            android:shadowColor="@color/black_shadow"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1.5"
            android:singleLine="false"
            android:text="@string/parvati_nick"
            android:textStyle="normal"
            android:textColor="@color/white_font"
            android:textSize="12dp"
            android:textAppearance="@android:style/TextAppearance.Holo.Small" />

        <ImageView
            android:id="@+id/parvati_image"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_below="@+id/parvati_hl_name"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/parvati_image" />

        <TextView
            android:id="@+id/parvati_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/parvati_hl_name"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="0dp"
            android:layout_toRightOf="@id/parvati_image"
            android:text="@string/parvati_description"
            android:textAppearance="@android:style/TextAppearance.Holo.Small"
            android:textColor="@color/white_font"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/parvati_hl_cards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/parvati_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="0dp"
            android:shadowColor="@color/black_shadow"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1.5"
            android:singleLine="false"
            android:text="CARDS"
            android:textColor="@color/white_font"
            android:textSize="14dp"
            android:alpha="0.95"
            app:fontFamily="@font/montalban_bold_italic" />

        <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/parvati_hl_cards"
            android:layout_marginTop="8dp">


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <ImageView
                    android:id="@+id/parvati_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/parvati_profile" />

                <ImageView
                    android:id="@+id/parvati_card1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/parvati_card1" />

                <ImageView
                    android:id="@+id/parvati_card2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/parvati_card2" />

                <ImageView
                    android:id="@+id/parvati_card3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/parvati_card3" />

                <ImageView
                    android:id="@+id/parvati_card4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/parvati_card4" />

            </LinearLayout>

        </HorizontalScrollView>

    </RelativeLayout>

</ScrollView>